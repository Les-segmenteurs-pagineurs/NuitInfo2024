// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  username String  @unique
  password  String
}

model HumanOrgan {
  id    Int     @id @default(autoincrement())
  name String @unique
  question String

  answer_a String
  answer_a_message String  
  answer_a_money Int
  answer_a_health Int

  answer_b String
  answer_b_message String
  answer_b_money Int
  answer_b_health Int

  modalOpen Boolean @default(false)

}

model SeaOrgan {
  id    Int     @id @default(autoincrement())
  name String @unique
  question String

  yes_message String
  yes_money Int
  yes_health Int


  no_message String
  no_money Int
  no_health Int

  modalOpen Boolean @default(false) 

}